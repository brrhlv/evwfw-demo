---
const navItems = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '/about' },
  { name: 'Services', href: '/services' },
  { name: 'Spa', href: '/spa' },
  { name: 'FAQ', href: '/faq' },
  { name: 'Insurance', href: '/insurance' },
  { name: 'Contact', href: '/contact' },
];

const documents = [
  {
    name: 'Records Release Form',
    file: '/documents/Records_Release.pdf',
    description: 'Request to release your medical records'
  }
];

const currentPath = Astro.url.pathname;
---

<nav class="bg-white shadow-md sticky top-0 z-50">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center py-4">
      <!-- Logo -->
      <a href="/" class="flex items-center">
        <img
          src="/east-valley-women-for-women-logo.svg"
          alt="East Valley Women for Women"
          class="h-12 md:h-16 w-auto"
        />
      </a>

      <!-- Desktop Navigation - Compact for many items -->
      <ul class="hidden lg:flex space-x-4 text-sm">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class={`text-gray-700 hover:text-primary-600 font-medium transition-colors ${
                currentPath === item.href ? 'text-primary-600 border-b-2 border-primary-600' : ''
              }`}
            >
              {item.name}
            </a>
          </li>
        ))}
      </ul>

      <!-- CTA Buttons and Documents -->
      <div class="hidden lg:flex items-center space-x-3">
        <!-- Social Media Icons -->
        <a
          href="https://www.facebook.com/ValleyWomenForWomenOBGYN/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-700 hover:text-primary-600 transition-colors p-2"
          aria-label="Facebook"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
        <a
          href="https://www.instagram.com/eastvalleywomenforwomen/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-700 hover:text-primary-600 transition-colors p-2"
          aria-label="Instagram"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
        </a>

        <!-- Documents Dropdown -->
        <div class="relative group">
          <button
            class="text-gray-700 hover:text-primary-600 transition-colors p-2"
            aria-label="Documents"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </button>
          <div class="absolute right-0 mt-2 w-72 bg-white rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            <div class="p-4">
              <h3 class="text-sm font-bold text-gray-900 mb-3 border-b pb-2">Patient Documents</h3>
              <ul class="space-y-2">
                {documents.map((doc) => (
                  <li>
                    <a
                      href={doc.file}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="block p-3 rounded-lg hover:bg-gray-50 transition-colors group/item"
                    >
                      <div class="flex items-start space-x-3">
                        <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"/>
                        </svg>
                        <div class="flex-1">
                          <p class="text-sm font-semibold text-gray-900 group-hover/item:text-primary-600">
                            {doc.name}
                          </p>
                          <p class="text-xs text-gray-500 mt-1">
                            {doc.description}
                          </p>
                        </div>
                        <svg class="w-4 h-4 text-gray-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                        </svg>
                      </div>
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>

        <a
          href="https://30624-1.portal.athenahealth.com/"
          target="_blank"
          rel="noopener noreferrer"
          class="bg-gray-100 text-primary-700 px-5 py-2 rounded-lg hover:bg-gray-200 transition-colors font-semibold border border-primary-300"
        >
          Patient Portal
        </a>
        <a
          href="tel:480-597-4835"
          class="bg-primary-600 text-white px-6 py-2 rounded-lg hover:bg-primary-700 transition-colors font-semibold"
        >
          (480) 597-4835
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="lg:hidden text-gray-700 focus:outline-none"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden lg:hidden pb-4">
      <ul class="space-y-2">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class={`block py-2 text-gray-700 hover:text-primary-600 font-medium ${
                currentPath === item.href ? 'text-primary-600' : ''
              }`}
            >
              {item.name}
            </a>
          </li>
        ))}

        <!-- Documents Section in Mobile Menu -->
        <li class="mt-4 pt-4 border-t">
          <p class="text-xs font-bold text-gray-500 uppercase mb-2 px-2">Patient Documents</p>
          {documents.map((doc) => (
            <a
              href={doc.file}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center space-x-2 py-2 px-2 text-gray-700 hover:text-primary-600 hover:bg-gray-50 rounded"
            >
              <svg class="w-5 h-5 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"/>
              </svg>
              <span class="text-sm font-medium">{doc.name}</span>
            </a>
          ))}
        </li>

        <!-- Social Media Section in Mobile Menu -->
        <li class="mt-4 pt-4 border-t">
          <p class="text-xs font-bold text-gray-500 uppercase mb-2 px-2">Follow Us</p>
          <div class="flex space-x-4 px-2">
            <a
              href="https://www.facebook.com/ValleyWomenForWomenOBGYN/"
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-700 hover:text-primary-600 transition-colors"
              aria-label="Facebook"
            >
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a
              href="https://www.instagram.com/eastvalleywomenforwomen/"
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-700 hover:text-primary-600 transition-colors"
              aria-label="Instagram"
            >
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          </div>
        </li>

        <li>
          <a
            href="https://30624-1.portal.athenahealth.com/"
            target="_blank"
            rel="noopener noreferrer"
            class="block bg-gray-100 text-primary-700 px-6 py-2 rounded-lg hover:bg-gray-200 transition-colors font-semibold text-center mt-4 border border-primary-300"
          >
            Patient Portal
          </a>
        </li>
        <li>
          <a
            href="tel:480-597-4835"
            class="block bg-primary-600 text-white px-6 py-2 rounded-lg hover:bg-primary-700 transition-colors font-semibold text-center"
          >
            (480) 597-4835
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
