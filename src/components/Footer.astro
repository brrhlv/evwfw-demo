const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-white py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div>
        <h3 class="text-xl font-bold mb-4">East Valley Women<br/>for Women</h3>
        <p class="text-gray-400 mb-4">
          The best all-female staffed Gynecologists and Women's Health practice in Arizona.
        </p>
        <div class="mb-4">
          <a
            href="https://30624-1.portal.athenahealth.com/"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block bg-primary-600 text-white px-6 py-2 rounded-lg hover:bg-primary-700 transition-colors font-semibold"
          >
            Patient Portal
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
        <ul class="space-y-2">
          <li><a href="/" class="text-gray-400 hover:text-primary-500 transition-colors">Home</a></li>
          <li><a href="/about" class="text-gray-400 hover:text-primary-500 transition-colors">About</a></li>
          <li><a href="/services" class="text-gray-400 hover:text-primary-500 transition-colors">Services</a></li>
          <li><a href="/providers" class="text-gray-400 hover:text-primary-500 transition-colors">Providers</a></li>
          <li><a href="/contact" class="text-gray-400 hover:text-primary-500 transition-colors">Contact</a></li>
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Our Services</h4>
        <ul class="space-y-2">
          <li class="text-gray-400">Obstetrics & Gynecology</li>
          <li class="text-gray-400">Minimally Invasive Surgery</li>
          <li class="text-gray-400">Urinary Incontinence</li>
          <li class="text-gray-400">Vaginal Rejuvenation</li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Contact Us</h4>
        <ul class="space-y-2 text-gray-400">
