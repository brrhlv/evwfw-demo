---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Home - East Valley Women for Women">
  <Navigation />

  <!-- Hero Section -->
  <section class="relative min-h-[600px] h-[80vh] flex items-center justify-center bg-gradient-to-r from-primary-700 to-primary-500">
    <div class="absolute inset-0 bg-black opacity-40"></div>
    <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('https://images.pexels.com/photos/4173251/pexels-photo-4173251.jpeg?auto=compress&cs=tinysrgb&w=1920'); mix-blend-mode: overlay;"></div>

    <div class="relative z-10 text-center text-white px-4 max-w-5xl mx-auto">
      <h1 class="text-5xl md:text-6xl font-bold mb-6">
        East Valley Women for Women
      </h1>
      <p class="text-xl md:text-2xl mb-4 text-gray-100">
        The best all-female staffed Gynecologists and Women's Health practice in Arizona
      </p>
      <p class="text-lg md:text-xl mb-8 text-gray-200">
        Comprehensive obstetrical and gynecological care in Chandler, AZ
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/contact"
          class="bg-primary-600 text-white px-8 py-4 rounded-lg hover:bg-primary-700 transition-colors font-semibold text-lg shadow-lg"
        >
          Book Appointment
        </a>
        <a
          href="tel:480-597-4835"
          class="bg-white text-primary-700 px-8 py-4 rounded-lg hover:bg-gray-100 transition-colors font-semibold text-lg shadow-lg"
        >
          Call (480) 597-4835
        </a>
      </div>
    </div>
  </section>

  <!-- Awards & Recognition -->
  <section class="py-12 bg-white">
    <div class="container mx-auto px-4">
      <div class="flex flex-wrap items-center justify-center gap-8 text-center">
        <div class="bg-primary-50 px-8 py-4 rounded-lg">
          <p class="text-primary-700 font-bold text-lg">Arizona Magazine Top Doc</p>
        </div>
        <div class="bg-primary-50 px-8 py-4 rounded-lg">
          <p class="text-primary-700 font-bold text-lg">Best of the East Valley</p>
        </div>
        <div class="bg-primary-50 px-8 py-4 rounded-lg">
          <p class="text-primary-700 font-bold text-lg">40 Female Provider Staff</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Why Choose Us</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Award-winning all-female practice providing comprehensive women's healthcare
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl transition-shadow">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3">All-Female Staff</h3>
          <p class="text-gray-600">
            40 female provider staff including OBGYNs, nurse practitioners, physician assistants, and certified nurse midwives
          </p>
        </div>

        <!-- Feature 2 -->
        <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl transition-shadow">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3">Board Certified MIGS</h3>
          <p class="text-gray-600">
            Dr. Van Eken is one of only a few MIGS-certified surgeons in Arizona, specializing in minimally invasive gynecologic surgery
          </p>
        </div>

        <!-- Feature 3 -->
        <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl transition-shadow">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3">25+ Years Experience</h3>
          <p class="text-gray-600">
            Our founding physicians have over 25 years of experience providing comprehensive women's healthcare
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Our Services</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Comprehensive women's health services through all stages of life
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Service 1 -->
        <div class="bg-gray-50 p-6 rounded-lg hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-bold mb-3 text-primary-700">Complete Gynecologic Care</h3>
          <p class="text-gray-600 mb-4">
            Comprehensive GYN services including well woman exams, preventive care, and wellness treatments
          </p>
          <a href="/services" class="text-primary-600 hover:text-primary-700 font-semibold">
            Learn More →
          </a>
        </div>

        <!-- Service 2 -->
        <div class="bg-gray-50 p-6 rounded-lg hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-bold mb-3 text-primary-700">Obstetrics</h3>
          <p class="text-gray-600 mb-4">
            Prenatal care, pregnancy management, childbirth services, and postpartum support
          </p>
          <a href="/services" class="text-primary-600 hover:text-primary-700 font-semibold">
            Learn More →
          </a>
        </div>

        <!-- Service 3 -->
        <div class="bg-gray-50 p-6 rounded-lg hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-bold mb-3 text-primary-700">Minimally Invasive Surgery</h3>
          <p class="text-gray-600 mb-4">
            Board-certified MIGS surgeon offering advanced surgical techniques with faster recovery
          </p>
          <a href="/services" class="text-primary-600 hover:text-primary-700 font-semibold">
            Learn More →
          </a>
        </div>

        <!-- Service 4 -->
        <div class="bg-gray-50 p-6 rounded-lg hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-bold mb-3 text-primary-700">NovaSure Ablation</h3>
          <p class="text-gray-600 mb-4">
            Treatment for heavy bleeding, irregular bleeding, and bleeding between periods
          </p>
          <a href="/services" class="text-primary-600 hover:text-primary-700 font-semibold">
            Learn More →
          </a>
        </div>

        <!-- Service 5 -->
        <div class="bg-gray-50 p-6 rounded-lg hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-bold mb-3 text-primary-700">TeleMedicine & TeleHealth</h3>
          <p class="text-gray-600 mb-4">
            Remote consultations and care for established patients when appropriate
          </p>
          <a href="/services" class="text-primary-600 hover:text-primary-700 font-semibold">
            Learn More →
          </a>
        </div>

        <!-- Service 6 -->
        <div class="bg-gray-50 p-6 rounded-lg hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-bold mb-3 text-primary-700">Adolescent & Menopause Care</h3>
          <p class="text-gray-600 mb-4">
            Comprehensive care for women through all life stages including adolescence and menopause
          </p>
          <a href="/services" class="text-primary-600 hover:text-primary-700 font-semibold">
            Learn More →
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Providers Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Our Founding Physicians</h2>
        <p class="text-xl text-gray-600">
          Board-certified experts in women's health
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        <!-- Provider 1 -->
        <div class="bg-white p-8 rounded-lg shadow-md">
          <h3 class="text-2xl font-bold mb-2 text-primary-700">Dr. Denise Y. Belisle</h3>
          <p class="text-lg font-semibold text-gray-600 mb-4">MD, FACOG</p>
          <ul class="text-gray-600 space-y-2 mb-4">
            <li>• Board Certified in Obstetrics & Gynecology</li>
            <li>• 25+ years of experience</li>
            <li>• Rutgers Robert Wood Johnson Medical School (1998)</li>
            <li>• Hospital affiliations: Chandler Regional, Mercy Gilbert</li>
          </ul>
        </div>

        <!-- Provider 2 -->
        <div class="bg-white p-8 rounded-lg shadow-md">
          <h3 class="text-2xl font-bold mb-2 text-primary-700">Dr. Mia Lynne Van Eken</h3>
          <p class="text-lg font-semibold text-gray-600 mb-4">DO, FACOG, MBA</p>
          <ul class="text-gray-600 space-y-2 mb-4">
            <li>• Board Certified in OB/GYN & MIGS</li>
            <li>• One of few MIGS-certified surgeons in Arizona</li>
            <li>• 25+ years of experience</li>
            <li>• MBA from Saint Joseph's University</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Location & Contact -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Visit Us</h2>
        <p class="text-xl text-gray-600">
          Conveniently located in Chandler, Arizona
        </p>
      </div>

      <div class="max-w-4xl mx-auto bg-gray-50 p-8 rounded-lg">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4 text-primary-700">Location</h3>
            <p class="text-gray-600 mb-2">2181 E Pecos Rd, Suite 1</p>
            <p class="text-gray-600 mb-2">Chandler, Arizona 85225</p>
            <p class="text-gray-600">Santan Crossing office complex</p>
          </div>

          <div>
            <h3 class="text-xl font-bold mb-4 text-primary-700">Office Hours</h3>
            <p class="text-gray-600 mb-2">Monday - Thursday: 8:00 AM - 5:00 PM</p>
            <p class="text-gray-600 mb-2">Friday: 8:00 AM - 12:00 PM</p>
            <p class="text-gray-600">Saturday - Sunday: Closed</p>
          </div>
        </div>

        <div class="mt-8 text-center">
          <a
            href="tel:480-597-4835"
            class="inline-block bg-primary-600 text-white px-8 py-4 rounded-lg hover:bg-primary-700 transition-colors font-semibold text-lg shadow-lg"
          >
            Call (480) 597-4835
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-primary-700">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl font-bold text-white mb-6">
        Ready to Schedule Your Appointment?
      </h2>
      <p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
        New patients welcome. We accept most major insurance plans and offer Cherry Payment Plans.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/contact"
          class="bg-white text-primary-700 px-8 py-4 rounded-lg hover:bg-gray-100 transition-colors font-semibold text-lg shadow-lg inline-block"
        >
          Book Online
        </a>
        <a
          href="tel:480-597-4835"
          class="bg-primary-900 text-white px-8 py-4 rounded-lg hover:bg-primary-800 transition-colors font-semibold text-lg shadow-lg inline-block"
        >
          Call (480) 597-4835
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
